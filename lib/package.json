{
  "name": "@opentdf/client",
  "version": "1.0.0",
  "description": "Access and generate tdf protected content",
  "homepage": "https://github.com/opentdf/client-web",
  "bugs": {
    "url": "https://github.com/opentdf/client-web/issues"
  },
  "files": [
    "dist/client/*",
    "dist/server/*",
    "dist/types/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opentdf/client-web.git",
    "directory": "lib"
  },
  "license": "MIT",
  "author": "Virtru",
  "browser": "./dist/client/client-web.web.js",
  "main": "./dist/server/node.cjs.js",
  "types": "./dist/types/src/index.d.ts",
  "scripts": {
    "build": "npm run clean && webpack",
    "build:test": "rm -rf dist/esm && tsc -p tsconfig-esm.json && ../scripts/add-module-types.sh esm && ../scripts/fill-version.sh",
    "clean": "rm -rf {build,dist}",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "license-check": "license-checker --production --onlyAllow 'Apache-2.0; BSD; ISC; MIT'",
    "lint": "eslint ./{src,test}/**/*.ts",
    "prepack": "npm run build",
    "test": "npm run build:test && web-test-runner",
    "test:watch": "web-test-runner --watch",
    "watch": "(trap 'kill 0' SIGINT; npm run build && (npm run build:watch & npm run test -- --watch))"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "jose": "~4.2.1",
    "node-fetch": "^3.2.3",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "uuid": "~8.3.2"
  },
  "devDependencies": {
    "@esm-bundle/chai": "~4.3.4-fix.0",
    "@types/chai": "~4.2.22",
    "@types/jsonwebtoken": "~8.5.5",
    "@types/mocha": "~9.0.0",
    "@types/sinon": "~10.0.6",
    "@types/uuid": "~8.3.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@web/dev-server-rollup": "~0.3.13",
    "@web/test-runner": "~0.13.21",
    "@web/test-runner-commands": "~0.5.13",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "exports-loader": "^3.1.0",
    "imports-loader": "^3.1.1",
    "license-checker": "^25.0.1",
    "prettier": "^2.4.1",
    "rollup": "^2.59.0",
    "sinon": "~12.0.1",
    "ts-loader": "^9.2.7",
    "typescript": "4.5.2",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
